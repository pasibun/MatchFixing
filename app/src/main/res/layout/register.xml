<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#282828"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registreren"
        android:typeface="sans"
        android:textSize="35sp"
        android:textColor="#00aa55"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#ffffff"
    android:textStyle="bold|italic"
    android:textColorHint="#ffffff"
    android:background="#5d5d5d"
    android:padding="0dp"
    android:hint="Gebruikersnaam"
    android:textSize="20sp"
    android:id="@+id/edtuserid"
    android:layout_marginTop="40dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="5dp"
        android:textAlignment="center" />

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#ffffff"
    android:textStyle="bold|italic"
    android:textColorHint="#ffffff"
    android:background="#5d5d5d"
    android:padding="0dp"
    android:hint="Naam"
    android:textSize="20sp"
    android:id="@+id/edtfullname"
    android:layout_below="@+id/edtuserid"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="5dp"
    android:textAlignment="center" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:padding="0dp"
        android:hint="Achternaam"
        android:textSize="20sp"
        android:id="@+id/edtsurname"
        android:layout_below="@+id/edtfullname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Wachtwoord"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:padding="0dp"
        android:inputType="textPassword"
        android:id="@+id/edtpass"
        android:textStyle="bold|italic"
        android:textAllCaps="false"
        android:layout_below="@+id/edtsurname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Herhaal wachtwoord"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textStyle="bold|italic"
        android:background="#5d5d5d"
        android:padding="0dp"
        android:inputType="textPassword"
        android:id="@+id/edtpasscheck"
        android:layout_below="@+id/edtpass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:padding="0dp"
        android:hint="Geboortedatum (JJJJ-MM-DD)"
        android:textSize="20sp"
        android:id="@+id/edtuserbirthdate"
        android:layout_below="@+id/edtpasscheck"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:padding="0dp"
        android:hint="Sexe"
        android:textSize="20sp"
        android:id="@+id/edtusergender"
        android:layout_below="@+id/edtuserbirthdate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:padding="0dp"
        android:hint="E-mail"
        android:textSize="20sp"
        android:id="@+id/edtUserMail"
        android:layout_below="@+id/edtusergender"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:padding="0dp"
        android:hint="Adres"
        android:textSize="20sp"
        android:id="@+id/edtUserAdress"
        android:layout_below="@+id/edtUserMail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:padding="0dp"
        android:hint="Woonplaats"
        android:textSize="20sp"
        android:id="@+id/edtUserCity"
        android:layout_below="@+id/edtUserAdress"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:padding="0dp"
        android:hint="Telefoonnummer"
        android:textSize="20sp"
        android:id="@+id/edtUserPhone"
        android:layout_below="@+id/edtUserCity"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:padding="0dp"
        android:hint="Mobiel"
        android:textSize="20sp"
        android:id="@+id/edtUserMobile"
        android:layout_below="@+id/edtUserPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:padding="0dp"
        android:hint="Score Enkel"
        android:textSize="20sp"
        android:id="@+id/edtUserSingle"
        android:layout_below="@+id/edtUserMobile"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:padding="0dp"
        android:hint="Score dubbel"
        android:textSize="20sp"
        android:id="@+id/edtUserDouble"
        android:layout_below="@+id/edtUserSingle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#00aa55"
        android:background="#5d5d5d"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="10dp"
        android:id="@+id/button3"
        android:text="Registreren"
        android:onClick="register_register"
        android:hapticFeedbackEnabled="true"
        tools:text="Registreren"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
