<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.matchfixing.minor.matchfixing.NewMatchActivity"
    android:background="#282525">

    <Button
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:background="@drawable/home"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="home_home" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/TimeTextField"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/DateTextField"
        android:layout_centerHorizontal="true"
        android:text="Time:"
        android:textColor="#ffffff"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Match type:"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:layout_marginTop="7.5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#00aa55"
        android:background="#5d5d5d"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="10dp"
        android:id="@+id/timeBtn"
        android:text="Pick Time"
        android:onClick="SetupMatch (NewMatchActivity)"
        android:elevation="0dp"
        android:layout_below="@+id/dateBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#00aa55"
        android:background="#5d5d5d"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="10dp"
        android:id="@+id/button4"
        android:text="Setup Match"
        android:onClick="SetupMatch"
        android:elevation="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hapticFeedbackEnabled="true" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:id="@+id/spinner2"
        android:dropDownSelector="#b0ff0101"
        android:dropDownWidth="150dp"
        android:background="#19ffffff"
        android:popupBackground="#000000"
        android:textAlignment="center"
        android:touchscreenBlocksFocus="false"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Private/Public:"
        android:id="@+id/textView16"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:id="@+id/spinner3"
        android:dropDownSelector="#b0ff0101"
        android:dropDownWidth="150dp"
        android:background="#19ffffff"
        android:popupBackground="#000000"
        android:textAlignment="center"
        android:touchscreenBlocksFocus="false"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#00aa55"
        android:background="#5d5d5d"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="10dp"
        android:id="@+id/dateBtn"
        android:text="Pick Date"
        android:onClick="SetupMatch (NewMatchActivity)"
        android:elevation="0dp"
        android:layout_below="@+id/spinner3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Match degree:"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/DateTextField"
        android:text="Date: "
        android:textColor="#ffffff"
        android:hapticFeedbackEnabled="false"
        android:textStyle="bold"
        android:layout_below="@+id/timeBtn"
        android:layout_alignRight="@+id/TimeTextField"
        android:layout_alignEnd="@+id/TimeTextField"
        android:layout_marginTop="25dp" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:id="@+id/spinner"
        android:layout_marginTop="45dp"
        android:dropDownSelector="#b0ff0101"
        android:dropDownWidth="150dp"
        android:background="#19ffffff"
        android:popupBackground="#000000"
        android:textAlignment="center"
        android:spinnerMode="dropdown"
        android:touchscreenBlocksFocus="false"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
